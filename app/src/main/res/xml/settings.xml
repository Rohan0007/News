<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/search_default"
        android:inputType="text"
        android:key="@string/search_key"
        android:selectAllOnFocus="true"
        android:title="@string/search_label" />

    <ListPreference
        android:defaultValue="@string/topic_default"
        android:entries="@array/settings_topic_labels"
        android:entryValues="@array/settings_topic_values"
        android:key="@string/topic_key"
        android:title="@string/topic_label" />

</PreferenceScreen>